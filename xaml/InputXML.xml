<Window x:Class="SoftwareInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Software Installer" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="checkedListBox" Grid.Row="0" Margin="10" SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding}" FontSize="12" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="1" Content="Install Selected" Margin="10" Click="InstallSelected_Click" />
        <Button Grid.Row="2" Content="Install All" Margin="10" Click="InstallAll_Click" />
        <Button Grid.Row="3" Content="Upgrade All" Margin="10" Click="UpgradeAll_Click" />
        <Button Grid.Row="4" Content="Close" Margin="10" Click="Close_Click" />
    </Grid>
</Window>